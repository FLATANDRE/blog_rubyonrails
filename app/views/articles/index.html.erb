<div class="container">
  <div class="row">
    <div class="col col-1 bg-primary text-white">
      Column
    </div>
    <div class="col col-11">
      <h1>Articles</h1>

      <% flash.each do |type, msg| %>
        <div class="toast align-items-center" role="alert" aria-live="assertive" aria-atomic="true">
          <div class="d-flex">
            <div class="toast-body">
              <%= msg %>
            </div>
            <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
        </div>        
      <% end %>

      <br>
      <br>
      <%= link_to "New Article", new_article_path %>

      <br>
      <br>
      <table class="table">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col" colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @articles.each do |article| %>
          <% unless article.archived? %>
            <tr>
              <th scope="row"><%= article.title %></th>
              <th scope="row"><%= link_to "Show", article %></th>
              <th scope="row"><%= link_to "Edit", edit_article_path(article) %></th>
              <th scope="row"><%= link_to "Destroy", article, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></th>
            </tr>
          <% end %>
        <% end %>
      </tbody>
      </table>
      <br>      
    </div>    
  </div>
</div>


